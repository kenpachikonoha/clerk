{
  "name": "7exchange",
  "slug": "7exchange",
  "version": "1.0.0",
  "orientation": "portrait",
  "icon": "./src/assets/images/icon.png",
  "scheme": "myapp",
  "userInterfaceStyle": "automatic",
  "splash": {
    "image": "./src/assets/images/splash.png",
    "resizeMode": "contain",
    "backgroundColor": "#ffffff"
  },
  "assetBundlePatterns": ["**/*"],
  "ios": {
    "supportsTablet": true,
    "bundleIdentifier": "com.seven.exchange",
    "infoPlist": {
      "NSFaceIDUsageDescription": "Allow $(PRODUCT_NAME) to use Face ID."
    }
  },
  "android": {
    "adaptiveIcon": {
      "foregroundImage": "./src/assets/images/adaptive-icon.png",
      "backgroundColor": "#ffffff"
    },
    "package": "com.seven.exchange",
    "permissions": ["android.permission.USE_BIOMETRIC", "android.permission.USE_FINGERPRINT"]
  },
  "plugins": [
    "expo-secure-store",
    [
      "expo-local-authentication",
      {
        "faceIDPermission": "Allow $(PRODUCT_NAME) to use Face ID."
      }
    ],
    [
      "expo-dynamic-app-icon",
      {
        "default": {
          "image": "./src/assets/images/icon.png",
          "prerendered": true
        },
        "dark": {
          "image": "./src/assets/images/icon-dark.png",
          "prerendered": true
        },
        "vivid": {
          "image": "./src/assets/images/icon-vivid.png",
          "prerendered": true
        }
      }
    ],
    [
      "expo-asset",
      {
        "assets": ["./src/assets/videos/intro.mp4"]
      }
    ],
    "expo-font"
  ],
  "experiments": {
    "typedRoutes": true
  },
  "extra": {
    "eas": {
      "projectId": "63b9dabf-6b25-446d-8064-49dd9dce76aa"
    }
  }
}
